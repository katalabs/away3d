package away3d.core.filter{	import away3d.arcane;	import away3d.core.render.*;		use namespace arcane;	    /**    * Defines a maximum z value for rendering primitives    */    public class ZDepthFilter implements IPrimitiveFilter    {    	private var _order:Array;		private var _maxZ:Number;    			/**		 * Creates a new <code>ZDepthFilter</code> object.		 *		 * @param	maxZ	A maximum allowed depth value for drawing primitives.		 */		function ZDepthFilter(maxZ:Number){			_maxZ = maxZ;		}        		/**		 * @inheritDoc		 */        public function filter(renderer:Renderer):void        {        	_order = renderer._order;			var i:uint;			for each (i in _order) {				if (renderer._screenZs[_order[i]] > _maxZ) {					_order.splice(i);					break;				}			}        }				/**		 * Used to trace the values of a filter.		 * 		 * @return A string representation of the filter object.		 */        public function toString():String        {            return "ZDepthFilter";        }    }}